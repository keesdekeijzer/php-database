<?php
// variabelen
$servername = "localhost";
$username = "username";
$password = "password";

// Maak verbinding
$conn = mysqli_connect($servername, $username, $password);

// Controleer verbinding
if (!$conn) {
    die("Verbinding mislukt: " . mysqli_connect_error());
}
echo "Succesvol verbonden";





?> 
